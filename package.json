{
  "name": "mcp-comfy-ui-builder",
  "version": "0.1.0",
  "description": "ComfyUI Node Discovery: scan nodes, generate descriptions via Claude, update knowledge base, MCP tools for Cursor/Claude",
  "type": "module",
  "main": "dist/cli.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "scan": "tsx src/cli.ts scan",
    "scan:dry": "tsx src/cli.ts scan --dry-run",
    "sync-manager": "tsx src/cli.ts sync-manager",
    "analyze": "tsx src/cli.ts analyze",
    "add-node": "tsx src/cli.ts add-node",
    "run-one-node": "tsx scripts/run-one-node.ts",
    "mcp": "node dist/mcp-server.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "comfyui",
    "mcp",
    "node-discovery",
    "cursor",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mcp-comfy-ui-builder.git"
  },
  "homepage": "https://github.com/your-username/mcp-comfy-ui-builder#readme",
  "bugs": {
    "url": "https://github.com/your-username/mcp-comfy-ui-builder/issues"
  },
  "files": [
    "dist",
    "knowledge",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@octokit/rest": "^21.0.2",
    "commander": "^12.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=18"
  }
}
